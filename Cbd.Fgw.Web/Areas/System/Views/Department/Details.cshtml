@using Cbd.Common.HtmlHelper
@model Cbd.Fgw.Application.System.Department.Dto.DepartmentDto
@{
    ViewBag.Title = "部门详情";
}

<div class="well bs-component">
    <form class="form-horizontal">
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(u => u.Id, new { @class = "col-xs-3 control-label", @for = "UserName" })
            <div class="col-xs-8 div-details-info">
                @Html.DisplayFor(u => u.Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.DepartmentName, new { @class = "col-xs-3 control-label" })
            <div class="col-xs-8 div-details-info">
                @Html.DisplayFor(u => u.DepartmentName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.ParentDepartment, new { @class = "col-xs-3 control-label" })
            <div class="col-xs-8 div-details-info">
                @if (Model.ParentDepartment != null) {
                    @Html.DisplayFor(u => u.ParentDepartment.DepartmentName)
                }
                else {
                    @: -
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.IsSystem, new {@class = "col-xs-3 control-label"})
            <div class="col-xs-8 div-details-info">
                @Html.Iischeck(Model.IsSystem)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Describe, new { @class = "col-xs-3 control-label" })
            <div class="col-xs-8 div-details-info">
                @Html.DisplayFor(u => u.Describe)
            </div>
        </div>

    </form>
</div>