@using Cbd.Common.HtmlHelper
@model Cbd.Fgw.Application.System.User.Dto.UserDto
@{
    ViewBag.Title = "用户详情";
}

<div class="well bs-component">
    @using (Html.BeginForm("CreateUser", "User", FormMethod.Post, new { @class = "form-horizontal" })) {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(u => u.UserName, new { @class = "col-xs-3 control-label", @for = "UserName" })
            <div class="col-xs-8 div-details-info">
                @Html.DisplayFor(u => u.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.RealName, new { @class = "col-xs-3 control-label", @for = "RealName" })
            <div class="col-xs-8 div-details-info">
                @Html.DisplayFor(u => u.RealName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.DepartmentId, new { @class = "col-xs-3 control-label", @for = "DepartmentId" })
            <div class="col-xs-8 div-details-info">
                @Html.DisplayFor(u => u.Department.DepartmentName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Roles, new { @class = "col-xs-3 control-label", @for = "DepartmentId" })
            <div class="col-xs-8 div-details-info">
                @foreach (var role in Model.Roles) {
                    @role.RoleName
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.IsActive, new { @class = "col-xs-3 control-label", @for = "IsActive" })
            <div class="col-xs-8 div-details-info">
                @Html.Iischeck(Model.IsActive)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.IsSystem, new { @class = "col-xs-3 control-label", @for = "IsActive" })
            <div class="col-xs-8 div-details-info">
                @Html.Iischeck(Model.IsSystem)
            </div>
        </div>
    }
</div>